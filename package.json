{
  "name": "query-editor",
  "version": "1.0.0",
  "description": "An easy-use visual editor for complex queries.",
  "main": "dist/index.js",
  "scripts": {
    "watch": "watchify slate.js -o main.js --debug",
    "build": "browserify index.js -o dist/index.js --standalone QueryEditor",
    "serve": "live-server",
    "styles": "node-sass -w assets/styles.scss public/media/styles.css"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "plugins": [
            "@babel/plugin-proposal-class-properties"
          ],
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
          ]
        }
      ]
    ]
  },
  "author": "Simon Hildebrandt <simon.hildebrandt@lexer.com.au>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "babelify": "^10.0.0",
    "browserify": "^14.4.0",
    "browserify-notify": "^1.1.2",
    "immutable": "^4.0.0-rc.12",
    "live-server": "^1.2.0",
    "react": "^16.8",
    "react-dom": "^16.8",
    "watchify": "^3.9.0",
    "react-popper": "^1.3.3",
    "slate": "^0.44.10",
    "slate-plain-serializer": "^0.6.34",
    "slate-react": "^0.21.16"
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0"
  }
}
